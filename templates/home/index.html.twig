{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        nav {
            background: #f5f5f5;
            padding: 1em;
            text-align: right;
        }
        nav a {
            margin-left: 1em;
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }
        .gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 2em;
        }
        .photo {
            width: 200px;
            text-align: center;
        }
        .photo img {
            max-width: 100%;
            border-radius: 8px;
        }
        .photo p {
            margin-top: 0.5em;
            font-size: 14px;
            color: #555;
        }
    </style>

    <!-- Barre de navigation -->
    <nav>
        <a href="{{ path('app_login') }}">Connexion</a>
        <a href="{{ path('app_register') }}">Inscription</a>
    </nav>

    <h1>Bienvenue sur la galerie ðŸ“¸</h1>

    <!-- Affichage des photos -->
    <div class="gallery">
        {% for photo in photos %}
            <div class="photo">
                <img src="{{ photo.url }}" alt="photo">
                <p>{{ photo.description }}</p>
            </div>
        {% else %}
            <p>Aucune photo disponible.</p>
        {% endfor %}
    </div>
{% endblock %}
